<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/main_blue</item>
    </style>

    <style name="StandardText">
        <item name="fontPath">fonts/IRANSansMobile.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#181818</item>
    </style>

    <style name="StandardTextDarkblue">
        <item name="fontPath">fonts/IRANSansMobile.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="StandardText14grey">
        <item name="fontPath">fonts/IRANSansMobile.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#737373</item>
    </style>

    <style name="StandardTextGrey">
        <item name="fontPath">fonts/IRANSansMobile.ttf</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#737373</item>
    </style>

    <style name="SmallText">
        <item name="fontPath">fonts/IRANSansMobile.ttf</item>
        <item name="android:textSize">13sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#737373</item>
    </style>

    <style name="tagText">
        <item name="fontPath">fonts/IRANSansMobile.ttf</item>
        <item name="android:textSize">11sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="StandardTitle" parent="StandardText">
        <item name="fontPath">fonts/IRANSansMobile_Medium.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#737373</item>
    </style>
    <style name="HeaderTitleStyle" parent="@android:style/TextAppearance">
        <item name="fontPath">fonts/IRANSansMobile_Medium.ttf</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomDigitsTheme" parent="android:Theme.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">#00000000</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorLink">#00000000</item>
        <item name="colorAccent">#ff398622</item>
    </style>

    <style name="TextLabel" parent="@android:style/TextAppearance">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white_</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white_</item>
        <item name="colorControlNormal">@color/white_</item>
        <item name="colorControlActivated">@color/white_</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
